<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCLaManuAgendaCourtage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCLaManuAgendaCourtage.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid bg-primary">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">La Manu Bank</a>
                <img src="img/la-manu-bank.png" class="" alt="">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-around">
                        <li class="nav-item">
                            <a class="nav-link  text-white" asp-area="" asp-controller="Brokers" asp-action="Create">Ajouter un courtier</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-white" asp-area="" asp-controller="Brokers" asp-action="Index">Liste courtiers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-white" asp-area="" asp-controller="Customers" asp-action="Create">Ajouter client</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-white" asp-area="" asp-controller="Customers" asp-action="Index">Liste clients</a>
                        <li class="nav-item">
                            <a class="nav-link  text-white" asp-area="" asp-controller="Appointments" asp-action="Create">Ajouter rdv</a>
                        </li>
                    </ul>
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-primary">
        <div class="container">
            <div class="row text-white">
                <div class="col text-center ">
                    <p>@DateTime.Now.ToString("dddd, dd MMMM yyyy HH:mm") </p>
                </div>
                <div class="col text-center">
                    <p> &copy; 2023 - La Manu Bank  <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
                </div>  
            </div>
        </div>
        
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
